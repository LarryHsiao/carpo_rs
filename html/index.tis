function self.ready(){
    view.load_files();
    $(#search_input).on("change", search);
}

function append_file(file_name){
    var element = new Element("option")
    element.text = file_name
    element << event dblclick $(option){
        view.open(file_name)
    }
    $(div#list > select).append(element);
}

function search(){
    view.search($(#search_input).text)
}

function clear_files(){
    $(div#list > select).clear()
}